<odoo>
    <record id="module_category_kw_checkbox" model="ir.module.category">
        <field name="name">checkbox</field>
        <field name="sequence">30</field>
    </record>
    <record id="group_kw_checkbox_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id"
               ref="kw_checkbox.module_category_kw_checkbox"/>
    </record>
    <record id="group_kw_checkbox_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id"
               ref="kw_checkbox.module_category_kw_checkbox"/>
        <field name="implied_ids"
               eval="[(4, ref('kw_checkbox.group_kw_checkbox_user')),]"/>
    </record>
    <record id="group_kw_checkbox_admin" model="res.groups">
        <field name="name">Admin</field>
        <field name="category_id"
               ref="kw_checkbox.module_category_kw_checkbox"/>
        <field name="implied_ids"
               eval="[(4, ref('kw_checkbox.group_kw_checkbox_manager')),]"/>
        <field name="users"
               eval="[(4, ref('base.user_root')), (4, ref('base.user_admin')), ]"/>
    </record>

</odoo>
