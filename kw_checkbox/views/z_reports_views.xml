    <record model="ir.actions.act_window"
            id="kw_checkbox_kw_checkbox_z_reports_action_window">
        <field name="name">Z-Reports</field>
        <field name="res_model">kw.checkbox.z.reports</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="kw_checkbox_kw_checkbox_z_reports_menu"
